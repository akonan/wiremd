{
  "name": "markdown-mockup",
  "version": "0.1.0",
  "description": "Parse markdown-based UI mockup syntax and render to HTML/JSON - Core library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "import": "./dist/renderer/index.js"
    }
  },
  "bin": {
    "mdmock": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "unified": "^11.0.4",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-gfm": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-to-markdown": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "markdown",
    "wireframe",
    "mockup",
    "parser",
    "ui",
    "design",
    "html",
    "renderer"
  ],
  "author": "akonan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akonan/wiremd.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/akonan/wiremd/issues"
  },
  "homepage": "https://github.com/akonan/wiremd#readme"
}
